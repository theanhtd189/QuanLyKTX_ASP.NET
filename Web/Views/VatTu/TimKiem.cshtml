@model IEnumerable<Web.Models.VATTU>

@{
    ViewBag.Title = "Danh sách vật tư";
    Layout = "~/Views/Shared/MainLayout.cshtml";
    int Stt = 1;

}

<h2 class="display-6 text-capitalize lb-page">Danh sách tìm kiếm vật tư </h2>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">
                Tên vật tư
            </th>
            <th scope="col">
                Tổng số lượng
            </th>
            <th scope="col">
                Đơn giá
            </th>
            <th scope="col">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(Stt++)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tenvattu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.soluong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.giatien) VND
                </td>
                <td>
                    <a e-type="edit" e-id="@item.mavt" class="btn bg-secondary text-white"><i class="fa-solid fa-pen-to-square"></i> Sửa</a>
                    <i class="fa-brands fa-squarespace fs-5"></i>
                    <a e-id="@item.mavt" e-type="delete" class="btn text-white" style="background-color: rgb(200, 103, 122)"><i class="fa-solid fa-trash-can"></i> Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <i class="fa-regular fa-square-caret-left"></i> @Html.ActionLink("Quay lại", "Index")
</div>
