@model IEnumerable<Web.Models.PHIEU_DIENNUOC>

@{
    ViewBag.Title = "Hóa đơn điện nước";
    Layout = "~/Views/Shared/MainLayout.cshtml";
    int Stt = ViewBag.I;
}


<h2 class="display-6 lb-page">Danh sách phiếu điện nước </h2>
<a class="btn mb-2 add-new" e-type="create" href="#" style="background-color: rgb(154, 192, 173)"><i class="fa-solid fa-plus"></i> Thêm mới</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">
                Phòng
            </th>
            <th scope="col">
                Số điện
            </th>
            <th scope="col">
                Số nước
            </th>
            <th scope="col">
                Tổng tiền
            </th>
            <th scope="col">
                Ngày tạo phiếu
            </th>
            <th scope="col">Hành động</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @(Stt++)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PHONG.tenphong)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.sodien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sonuoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tongtien)
            </td>
            <td>
                 @item.ngaytaophieu.Value.ToString("dd/MM/yyyy")
            </td>
            <td>
                <a e-id="@item.maphieu" e-type="detail" class="btn text-white" style="background-color: rgb(115, 144, 166) "><i class="fa-solid fa-calendar-week"></i> Chi tiết</a>
                <i class="fa-brands fa-squarespace fs-5"></i>
                <a e-type="edit" e-id="@item.maphieu" class="btn bg-secondary text-white"><i class="fa-solid fa-pen-to-square"></i> Sửa</a>
                <i class="fa-brands fa-squarespace fs-5"></i>
                <a e-id="@item.maphieu" e-type="delete" class="btn text-white" style="background-color: rgb(200, 103, 122)"><i class="fa-solid fa-trash-can"></i> Xóa</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<div>
    <a href="@Url.Action("DownloadExcel","DienNuoc")">Export to Excel</a>
</div>

