@model IEnumerable<Web.Models.PHONG>

@{
    ViewBag.Title = "Danh sách phòng";
    Layout = "~/Views/Shared/MainLayout.cshtml";
    int Stt = ViewBag.I;

}

<h2 class="display-6 text-capitalize lb-page">Danh sách các phòng hiện có </h2>
<a class="btn mb-2 btn-outline-primary add-new" e-type="create" href="#">Thêm mới</a>
<table class="table table-striped table-dark ">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">
                Tên phòng
            </th>
            <th scope="col">
                Số giường
            </th>
            <th scope="col">
                Tầng
            </th>
            <th scope="col">
                Tình trạng
            </th>
            <th scope="col">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(Stt++)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tenphong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tsogiuong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tang)
                </td>
                <td>
                    @(item.tinhtrang==true? "Hoạt động":"Không hoạt động")
                </td>
                <td>
                    <a e-id="@item.maphong" e-type="detail" class="btn bg-primary text-white"><i class="fa-solid fa-calendar-week"></i> Chi tiết</a>
                    <i class="fa-brands fa-squarespace fs-5"></i>
                    <a e-id="@item.maphong" e-type="edit" class="btn bg-primary text-white"><i class="fa-solid fa-pen-to-square"></i> Sửa</a>
                    <i class="fa-brands fa-squarespace fs-5"></i>
                    <a e-id="@item.maphong" e-type="delete" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i> Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
