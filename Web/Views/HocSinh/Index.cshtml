@model IEnumerable<Web.Models.HOCSINH>
@{
    ViewBag.Title = "Danh sách học sinh";
    Layout = "~/Views/Shared/MainLayout.cshtml";
    int Stt = ViewBag.I;
}


<h2 class="display-6 text-capitalize lb-page">Danh sách các học sinh @(ViewBag.Stt!=null?ViewBag.Stt==true?"chưa được xếp phòng":"đã xóa khỏi phòng":"đã được xếp phòng")</h2>
<a class="btn mb-2 btn-outline-primary add-new" href="#">Thêm mới</a>
<table class="table table-striped table-dark text-capitalize">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">
                Họ tên
            </th>
            <th scope="col">
                Ngày sinh
            </th>
            <th scope="col">
                Quê quán
            </th>
            <th scope="col">
                Giới tính
            </th>
            <th scope="col">
                Lớp
            </th>
            <th scope="col">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @(Stt++)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hoten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ngaysinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quequan)
            </td>
            <td>
                @(item.gioitinh==true? "Nam":"Nữ")
            </td>
            <td>
                @Html.DisplayFor(m => item.lop)
            </td>
            <td>
                <a href="" class="btn bg-primary text-white"><i class="fa-solid fa-calendar-week"></i> Chi tiết</a>
                <i class="fa-brands fa-squarespace fs-5"></i>
                <a href="" class="btn bg-primary text-white"><i class="fa-solid fa-pen-to-square"></i> Sửa</a>
                <i class="fa-brands fa-squarespace fs-5"></i>
                <a href="" e-type="delete" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i> Xóa</a>
            </td>
        </tr>
        }
    </tbody>
</table>


